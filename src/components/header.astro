---
import sun from "../../public/sun.svg"
import moon from "../../public/moon.svg"
---

<header class="sticky min-w-fit top-0 mt-4">
    <nav class="flex sm:gap-5 rounded-full border-solid py-1 px-3 sm:mt-4 sm:my-0 my-2 shadow-2xl border-transparent text-black dark:text-white sm:text-base text-xs gap-3 z-10">
        <a href="#top">Home</a>
        <a href="#experience">Experience</a>
        <a href="#projects">Projects</a>
        <a href="#about">About</a>
        <a href="mailto:angelbeltrea.20@gmail.com?Subject=Hi, Ángel" target="_blank">Contact</a>
        <div class="w-4 sm:w-6 flex justify-center items-center">
            <button onclick="function changeClass() {
                const html = document.querySelector(':root');
                if(html.className === 'system' || html.className === 'dark' ){
                    html.className = '';  
                    document.documentElement.classList.remove('dark');
                }else{
                    html.className = 'dark';
                    document.documentElement.classList.add('dark');
                }
            }changeClass()"
                  class="w-4 sm:w-6 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                  <svg class="block dark:hidden toogle" fill="currentColor" viewBox="0 0 20 20">
                    <svg  xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24"  fill="none"  stroke="#24292f"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-sun"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" /><path d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7" /></svg>
                  </svg>
                  <svg class="hidden dark:block toogle" fill="none" viewBox="0 0 20 20">
                    <svg  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="white"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-moon"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z" /></svg>
                </svg>
                    <svg class="hidden nontoogle" id="computer" fill="currentColor" viewBox="0 0 20 20">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"  fill="none"  stroke="#24292f"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-device-desktop"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 5a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v10a1 1 0 0 1 -1 1h-16a1 1 0 0 1 -1 -1v-10z" /><path d="M7 20h10" /><path d="M9 16v4" /><path d="M15 16v4" /></svg>
                </svg>
              </button>
          </div>
    </nav>
</header>
<style>
    @media (min-width: 430px) {
        nav{
            font-size: 0.875rem /* 14px */;
            line-height: 1.25rem /* 20px */;
        }
        button{
            width: 1.25rem
        }
        div{
            width: 1.25rem
        }
    }
    nav{
        border-width: 1.5px;
        animation: navshadow 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
        background-color: rgba(255, 255, 255, 0.7);
    }
    nav:is(.dark *){
        border-width: 1.5px;
        animation: navshadowdark 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
        background-color: rgba(36, 41, 47, 0.7);
    }
    @keyframes navshadow {
        100% {
        background-color: rgb(255 255 255 / .5);
        --tw-shadow: 0 10px 15px -3px rgb(0 0 0 / .1), 0 4px 6px -4px rgb(0 0 0 / .1);
        --tw-shadow-colored: 0 10px 15px -3px var(--tw-shadow-color), 0 4px 6px -4px var(--tw-shadow-color);
        box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
        --tw-ring-offset-shadow: var(--tw-ring-inset) 0 0 0 var(--tw-ring-offset-width) var(--tw-ring-offset-color);
        --tw-ring-shadow: var(--tw-ring-inset) 0 0 0 calc(1px + var(--tw-ring-offset-width)) var(--tw-ring-color);
        box-shadow: var(--tw-ring-offset-shadow), var(--tw-ring-shadow), var(--tw-shadow, 0 0 #0000);
        --tw-ring-color: rgb(255 255 255 / .1);
        --tw-backdrop-blur: blur(8px);
        -webkit-backdrop-filter: var(--tw-backdrop-blur) var(--tw-backdrop-brightness) var(--tw-backdrop-contrast) var(--tw-backdrop-grayscale) var(--tw-backdrop-hue-rotate) var(--tw-backdrop-invert) var(--tw-backdrop-opacity) var(--tw-backdrop-saturate) var(--tw-backdrop-sepia);
        backdrop-filter: var(--tw-backdrop-blur) var(--tw-backdrop-brightness) var(--tw-backdrop-contrast) var(--tw-backdrop-grayscale) var(--tw-backdrop-hue-rotate) var(--tw-backdrop-invert) var(--tw-backdrop-opacity) var(--tw-backdrop-saturate) var(--tw-backdrop-sepia);
    }}
    @keyframes navshadowdark {
        100%{
        background-color: rgba(60, 60, 60, 0.5);
        --tw-shadow: 0 10px 15px -3px rgb(0 0 0 / .1), 0 4px 6px -4px rgb(0 0 0 / .1);
        --tw-shadow-colored: 0 10px 15px -3px var(--tw-shadow-color), 0 4px 6px -4px var(--tw-shadow-color);
        box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
        --tw-ring-offset-shadow: var(--tw-ring-inset) 0 0 0 var(--tw-ring-offset-width) var(--tw-ring-offset-color);
        --tw-ring-shadow: var(--tw-ring-inset) 0 0 0 calc(1px + var(--tw-ring-offset-width)) var(--tw-ring-color);
        box-shadow: var(--tw-ring-offset-shadow), var(--tw-ring-shadow), var(--tw-shadow, 0 0 #0000);
        --tw-ring-color: rgba(60, 60, 60, 0.1);
        --tw-backdrop-blur: blur(8px);
        -webkit-backdrop-filter: var(--tw-backdrop-blur) var(--tw-backdrop-brightness) var(--tw-backdrop-contrast) var(--tw-backdrop-grayscale) var(--tw-backdrop-hue-rotate) var(--tw-backdrop-invert) var(--tw-backdrop-opacity) var(--tw-backdrop-saturate) var(--tw-backdrop-sepia);
        backdrop-filter: var(--tw-backdrop-blur) var(--tw-backdrop-brightness) var(--tw-backdrop-contrast) var(--tw-backdrop-grayscale) var(--tw-backdrop-hue-rotate) var(--tw-backdrop-invert) var(--tw-backdrop-opacity) var(--tw-backdrop-saturate) var(--tw-backdrop-sepia);
    }}
    a{
        transition: all 0.3s;
    }
    a:hover{
        transform: translateY(-1.5px);
        color: rgb(30 64 175);
    }
    .toogle:is(.system *){
        display: none;
    }
    .nontoogle:is(.system *){
        display: block;
    }
    .nontoogle{
        display: none;
    }
</style>