---
const {name, url, icon} = Astro.props;
---

<a href=`${url}` target="_blank" class="flex items-center gap-2 dark:text-white bg-white text-black py-2 px-4 rounded-full shadow dark:hover:bg-blue-950 hover:bg-blue-200 hover:-translate-y-1 transition-all">
    <img src=`${icon}` alt=`${name}` loading="eager" class="w-6 h-6 ">
    <span>{name}</span>
</a>
<style>
    img:is(.dark *){
        filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(193deg) brightness(99%) contrast(106%);
    }
    a:is(.dark *){
        background-color: #22262b;
    }
</style>