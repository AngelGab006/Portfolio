---
const {date, tittle} = Astro.props;
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-blue-600 rounded-full mt-1.5 -start-1.5 border border-white dark:border-blue-700 dark:bg-blue-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-blue-600 dark:text-blue-700">{date}</time>
    <section class="flex gap-6">
        <div class="sm:size-1/2 size-full">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{tittle}</h3>
            <p class="sm:hidden mb-4 text-base font-normal text-gray-500 dark:text-gray-200 text-pretty"><slot/></p>
        </div>
        <div class="hidden sm:block size-3/4">
            <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-200 text-pretty"><slot/></p>
        </div>
    </section>
</li>