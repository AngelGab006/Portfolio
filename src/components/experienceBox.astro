---
const {date, tittle} = Astro.props;
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-blue-600 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-blue-600 dark:text-gray-500">{date}</time>
    <section class="flex gap-6">
        <div class="size-1/2"><h3 class="text-lg font-semibold text-gray-900 dark:text-white">{tittle}</h3></div>
        <div class="size-3/4"><p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-pretty"><slot/></p></div>
    </section>
</li>